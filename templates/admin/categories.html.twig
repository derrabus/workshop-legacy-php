{% extends 'base.html.twig' %}

{% block title %}Category Administration{% endblock %}

{% block body %}
    <h1>Category Administration</h1>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
